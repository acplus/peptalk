// Include file for PDBChain class



// Class declaration

class PDBChain {
public:
  // Constructor
  PDBChain(PDBMolecule *molecule, const char *name);

  // Property functions
  int ID(void) const;
  const char *Name(void) const;
  const R3Box& BBox(void) const;

  // Atom access functions
  int NAtoms(void) const;
  PDBAtom *Atom(int k) const;

  // Residue access functions
  int NResidues(void) const;
  PDBResidue *Residue(int k) const;
  PDBResidue *FindResidue(const char *name, int sequence, int insertion_code) const;

  // Molecule access functions
  PDBMolecule *Molecule(void) const;

public:
  int id;
  char name[4];
  R3Box bbox;
  PDBMolecule *molecule;
  RNArray<PDBResidue *> residues;
  RNArray<PDBAtom *> atoms;
};



// Inline functions

inline int PDBChain::
ID(void) const
{
  // Return id
  return id;
}



inline const char *PDBChain::
Name(void) const
{
  // Return name
  return name;
}



inline const R3Box& PDBChain::
BBox(void) const
{
  // Return bounding box (including atom radii)
  return bbox;
}



inline int PDBChain::
NAtoms(void) const
{
  // Return number of atoms
  return atoms.NEntries();
}



inline int PDBChain::
NResidues(void) const
{
  // Return number of residues
  return residues.NEntries();
}



inline PDBAtom *PDBChain::
Atom(int k) const
{
  // Return Kth atom
  return atoms.Kth(k);
}



inline PDBResidue *PDBChain::
Residue(int k) const
{
  // Return Kth residue
  return residues.Kth(k);
}



inline PDBMolecule *PDBChain::
Molecule(void) const
{
  // Return molecule this chain is part of
  return molecule;
}





